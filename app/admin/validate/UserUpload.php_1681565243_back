namespace app\admin\validate;

use think\Validate;

class UserUpload extends Validate
{
    protected $rule = [
        'sort|排序' => [
            'require' => 'require',
            'max' => '8',
            'number' => 'number',
        ],
        'status|状态' => [
            'require' => 'require',
            'max' => '1',
        ],
        'cate_id|栏目' => [
            'require' => 'require',
        ],
        'hits|点击次数' => [
            'number' => 'number',
        ],
        'description|描述' => [
            'max' => '255',
        ],
        'template|模板' => [
            'max' => '30',
        ],
        'field_r|字段选择' => [
            'require' => 'require',
        ]
    ];
}